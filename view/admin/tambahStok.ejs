<div class="flex min-h-screen bg-gray-100">
    <!-- Sidebar -->
    <%- include('../admin/sidebarAdm') %>
    <div class="flex-1 flex flex-col">
        <!-- Header -->
        <div class="navbar bg-base-100 shadow-md px-4 flex justify-between items-center">
            <div>
                <!-- Placeholder for left content if needed -->
            </div>
            <div class="flex items-center gap-2 ml-auto">
                <div class="avatar">
                    <div class="w-10 rounded-full">
                        <img src="https://via.placeholder.com/40" alt="Profil Wahyudi" />
                    </div>
                </div>
                <span class="font-medium">Wahyudi</span>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex flex-col flex-1 p-4 lg:p-6">
            <!-- Button Back -->
            <div class="mb-4">
                <button 
                    onclick="history.back()" 
                    class="btn btn-outline btn-sm flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    Kembali
                </button>
            </div>

            <!-- Form -->
            <h2 class="text-2xl font-bold text-gray-700 mb-6">Tambah Bibit</h2>

            <form method="post" action="/admin/tambahStok" enctype="multipart/form-data" class="bg-white p-6 rounded-lg shadow-md max-w-xl mx-auto">
                <div class="form-control mb-4">
                    <label class="label font-medium">
                        <span class="label-text text-gray-600">Nama Bibit</span>
                    </label>
                    <input type="text" placeholder="Nama Bibit" class="input input-bordered w-full" name="nama_bibit" required />
                </div>
                <div class="form-control mb-4">
                    <label class="label font-medium">
                        <span class="label-text text-gray-600">Jumlah Stok</span>
                    </label>
                    <input type="number" placeholder="Masukkan Jumlah Bibit" class="input input-bordered w-full" name="stok_bibit" required />
                </div>
                <div class="form-control mb-4">
                    <label class="label font-medium">
                        <span class="label-text text-gray-600">Deskripsi</span>
                    </label>
                    <textarea placeholder="Berikan Deskripsi Singkat" class="textarea textarea-bordered w-full" name="deskripsi" required></textarea>
                </div>
                <div class="form-control mb-4">
                    <label class="label font-medium">
                        <span class="label-text text-gray-600">Upload Foto</span>
                    </label>
                    <input type="file" class="input input-bordered w-full" name="foto" accept="image/*" required />
                </div>
                <div class="form-control mt-6">
                    <button type="submit" class="btn btn-primary w-full">Tambah</button>
                </div>
            </form>
        </div>
    </div>
</div>
