<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Dashboard Profil</title>
  <!-- Material Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="bg-gray-100">

  <div class="flex h-screen">
    <!-- Include Sidebar -->
    <%- include('../admin/sidebarAdm')%>

    <!-- Main Content -->
    <div class="flex-1 p-8 bg-gray-50 overflow-y-auto">
      <h1 class="text-2xl font-semibold mb-8">Profil</h1>

      <div class="bg-white rounded-lg p-8 shadow-sm">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Profile Photo Section -->
          <div class="flex flex-col items-center bg-gray-50 p-6 rounded-lg">
            <div class="relative">
              <img 
                src="/hutan.jpeg" 
                alt="Profile" 
                class="w-32 h-32 rounded-full object-cover"
              >
            </div>
            <button class="mt-4 px-4 py-2 bg-green-900 text-white rounded-md hover:bg-green-800 transition-colors">
              Edit Foto
            </button>
          </div>

          <!-- Profile Details Section -->
          <div class="md:col-span-2 space-y-4">
            <div class="space-y-3">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Nama</label>
                <input type="text" value="Nama" class="w-full p-2 border rounded-md" disabled>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Instansi</label>
                <input type="text" value="Instansi" class="w-full p-2 border rounded-md" disabled>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input type="email" value="Email" class="w-full p-2 border rounded-md" disabled>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Alamat</label>
                <textarea class="w-full p-2 border rounded-md" rows="3" disabled>Alamat</textarea>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">No Telpon</label>
                <input type="tel" value="Telepon" class="w-full p-2 border rounded-md" disabled>
              </div>
            </div>

            <div class="flex gap-4 mt-6">
              <button class="px-4 py-2 bg-green-900 text-white rounded-md hover:bg-green-800 transition-colors">Ubah Kata Sandi</button>
              <button class="px-4 py-2 bg-green-900 text-white rounded-md hover:bg-green-800 transition-colors">Edit Profil</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
