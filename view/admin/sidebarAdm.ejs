<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/daisyui@2.50.0/dist/full.css" rel="stylesheet" type="text/css" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="bg-gray-100">
<!-- Sidebar -->
<div class="w-64 bg-green-700 text-white h-screen flex flex-col">
  <div class="px-6 py-4 font-bold text-xl">
    <span>
      <img src="/sumbar.png" alt="logo sumbar" class="h-8 w-8">
      <p>APO SISTEM</p>
      <p class="text-sm">UPTD BSPTH</p>
    </span>
  </div>
  <nav class="mt-6 space-y-2" id="sidebar-menu">
    <!-- Dashboard -->
    <a 
      href="/dashboard" 
      class="flex items-center px-6 py-2 rounded-md transition-colors hover:bg-green-800">
      <span class="material-icons mr-3">home</span> Dashboard
    </a>
    <!-- Stok -->
    <a 
      href="/stok" 
      class="flex items-center px-6 py-2 rounded-md transition-colors hover:bg-green-800">
      <span class="material-icons mr-3">inventory</span> Stok
    </a>
    <!-- User -->
    <a 
      href="/user" 
      class="flex items-center px-6 py-2 rounded-md transition-colors hover:bg-green-800">
      <span class="material-icons mr-3">people</span> User
    </a>
    <!-- Pengajuan -->
    <a 
      href="/pengajuan" 
      class="flex items-center px-6 py-2 rounded-md transition-colors hover:bg-green-800">
      <span class="material-icons mr-3">assignment</span> Pengajuan
    </a>
  </nav>
  <div class="mt-auto px-6 py-4">
    <a href="#" class="flex items-center px-6 py-2 hover:bg-green-800 rounded-md">
      <span class="material-icons mr-3">logout</span> Keluar
    </a>
  </div>
</div>
</body>

<script>
  // Menentukan menu aktif berdasarkan URL saat ini
  document.addEventListener('DOMContentLoaded', () => {
    const currentPath = window.location.pathname; // Mendapatkan path URL
    const menuItems = document.querySelectorAll('#sidebar-menu a'); // Semua link di sidebar

    menuItems.forEach((item) => {
      if (item.getAttribute('href') === currentPath) {
        item.classList.add('bg-green-600'); // Tambahkan kelas jika URL cocok
      }
    });
  });
</script>
