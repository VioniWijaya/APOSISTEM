
<div class="flex min-h-screen">
    <%- include('../superadmin/sidebarAdm')%>
</head>
<body class="bg-gray-100">
    <div class="flex">

        <!-- Content -->
        <main class="flex-1 p-6">
            <div class="mb-6">
                <a href="#" class="text-green-700 flex items-center gap-2">
                    <span class="material-icons">arrow_back</span>
                    <span>Edit Admin</span>
                </a>
            </div>

            <div class="bg-white p-8 rounded shadow">
                <div class="grid grid-cols-3 gap-8">
                    <!-- Foto Section -->
                    <div class="flex flex-col items-center">
                        <img src="https://via.placeholder.com/150" alt="Foto Admin" class="w-32 h-32 rounded-full object-cover mb-4">
                        <button class="btn btn-primary">Edit Foto</button>
                    </div>

                    <!-- Form Section -->
                    <div class="col-span-2">
                        <form class="flex flex-col gap-4">
                            <div>
                                <label class="block text-sm font-medium">Nama</label>
                                <input type="text" class="input input-bordered w-full" placeholder="Nama Admin">
                            </div>
                            <div>
                                <label class="block text-sm font-medium">NIP</label>
                                <input type="text" class="input input-bordered w-full" placeholder="NIP Admin">
                            </div>
                            <div>
                                <label class="block text-sm font-medium">Email</label>
                                <input type="email" class="input input-bordered w-full" placeholder="Email Admin">
                            </div>

                            <div class="flex gap-4 mt-6">
                                <button type="button" class="btn btn-error">Batal</button>
                                <button type="submit" class="btn btn-success">Simpan</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://fonts.googleapis.com/icon?family=Material+Icons"></script>
</body>
</html>
